{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Visualize Episode",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/visualize_episode.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--root", "data/",
                "--split", "train",
                "--backend", "lmdb",
                "--K", "5",
                "--index", "3",
                "--save-dir", "figures",
                "--no-show"
            ]
        },
        {
            "name": "Test Loader",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/test_dataloader.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--root", "data/",
                "--split", "train",
                "--backend", "lmdb",
                "--K", "5",
                "--max-seq-len", "1024",
                "--batch-size", "8"
            ]
        },
        {
            "name": "Train QuickDraw Diffusion",
            "type": "debugpy",
            "request": "launch",
            "program": "diffusion_policy/train_quickdraw.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--data-root", "data/",
                "--horizon", "16",
                "--num-workers", "0",
                "--wandb-project", "quickdraw-diffusion"
            ]
        },
                {
            "name": "Train QuickDraw LSTM",
            "type": "debugpy",
            "request": "launch",
            "program": "lstm/train_quickdraw.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--data-root", "data/",
                "--num-workers", "1",
                // "--wandb-project", "quickdraw-diffusion"
            ]
        }
    ]
}
