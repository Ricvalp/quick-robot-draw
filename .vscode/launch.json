{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cache Images Dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/cache_images.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=fid/configs/cache.py",
                "--config.dataset_path=data/",
                "--config.output_dir=/mnt/external_storage/robotics/quick-robot-draw/imgs/",
                "--config.shard_size=10000",
                "--config.family_to_label_path=fid/family_to_label.yaml"
            ]
        },
        {
            "name": "Visualize Episode",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/visualize_episode.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--root", "data/",
                "--split", "train",
                "--backend", "lmdb",
                "--K", "5",
                "--index", "3",
                "--save-dir", "figures",
                "--no-show"
            ]
        },
        {
            "name": "Test Loader",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/test_dataloader.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--root", "data/",
                "--split", "train",
                "--backend", "lmdb",
                "--K", "5",
                "--max-seq-len", "1024",
                "--batch-size", "8"
            ]
        },
        {
            "name": "Train QuickDraw Diffusion",
            "type": "debugpy",
            "request": "launch",
            "program": "diffusion_policy/train_quickdraw.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--data-root", "data/",
                "--horizon", "16",
                "--num-workers", "0",
                "--wandb-project", "quickdraw-diffusion"
            ]
        },
                {
            "name": "Train QuickDraw LSTM",
            "type": "debugpy",
            "request": "launch",
            "program": "lstm/train_quickdraw.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--data-root", "data/",
                "--num-workers", "1",
                // "--wandb-project", "quickdraw-diffusion"
            ]
        },
        {
            "name": "Train ResNet18 for FID",
            "type": "debugpy",
            "request": "launch",
            "program": "fid/train_resnet18.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=fid/configs/train.py",
                "--config.data_dir=/mnt/external_storage/robotics/quick-robot-draw/imgs/",
                "--config.batch_size=128",
                "--config.num_epochs=10",
                "--config.num_workers=0",
                "--config.wandb_logging.use=False",
            ]
        }
    ]
}
