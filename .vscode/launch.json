    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train ResNet18 for FID",
            "type": "debugpy",
            "request": "launch",
            "program": "fid/train_resnet18.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=fid/configs/train.py",
                "--config.data_dir=/mnt/external_storage/robotics/quick-robot-draw/imgs/",
                "--config.batch_size=128",
                "--config.num_epochs=10",
                "--config.num_workers=0",
                "--config.wandb_logging.use=False",
            ]
        },
        {
            "name": "Train In-Context Imitation Learning LSTM",
            "type": "debugpy",
            "request": "launch",
            "program": "lstm/train_in_context_imitation_learning.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=configs/lstm/in_context_imitation_learning.py",
                "--config.data.root=data/all-classes/train-val-split/",
                "--config.loader.num_workers=0",
                "--config.wandb.use=True",
                "--config.data.K=4"
            ]
        },
        {
            "name": "Train Imitation Learning LSTM",
            "type": "debugpy",
            "request": "launch",
            "program": "lstm/train_imitation_learning.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=configs/lstm/imitation_learning.py",
                "--config.data.root=data/single-class/eyeglasses-simplified/",
                "--config.loader.num_workers=0",
                "--config.wandb.use=False",
            ]
        },
        {
            "name": "Train Encoder Decoder In-Context Imitation Learning Diffusion",
            "type": "debugpy",
            "request": "launch",
            "program": "diffusion/train_encoder_decoder_in_context_imitation_learning.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=configs/diffusion/encoder_decoder_in_context_imitation_learning.py",
                "--config.data.root=data/single-class/eyeglasses-simplified/",
                "--config.loader.num_workers=0",
                "--config.eval.interval=100"
            ]
        },
        {
            "name": "Train Imitation Learning Diffusion",
            "type": "debugpy",
            "request": "launch",
            "program": "diffusion/train_imitation_learning.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--config=configs/diffusion/imitation_learning.py",
                "--config.data.root=data/all-classes/train-only/",
                "--config.model.horizon=8",
                "--config.loader.num_workers=0",
                "--config.checkpoint.dir=diffusion_policy/checkpoints/imitation_learning/",
                "--config.wandb.use=False",
            ]
        },
    ]
}
